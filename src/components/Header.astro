---
const navItems = [
  {
    title: "Proyectos",
    label: "proyectos",
    url: "/#projects",
  },
  {
    title: "Webs",
    label: "webs",
    url: "/#webs",
  },
  {
    title: "Contacto",
    label: "contacto",
    url: "/#contact",
  },
];
---

<header
  class="fixed top-0 z-10 py-2 flex items-center justify-center w-full mx-auto mt-2"
>
  <nav
    class="flex px-3 text-sm font-medium rounded-full text-gray-500 justify-center items-center bg-white shadow-md"
  >
    <ul class="flex font-medium flex-row lg:space-x-4 lg:mt-0">
      {
        navItems.map((link) => (
          <li>
            <a
              class="relative block px-2 py-2 transition hover:text-gray-950"
              aria-label={link.label}
              href={link.url}
            >
              {link.title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
